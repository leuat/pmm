program test3;
var
	i, time : byte;
	c:array[8] of byte;
	
	P: pointer;

@define memPos "$2000"


procedure Raster();
begin
	inc(time);
	i:=sine[time]/16;
	P:=$0400-10;
	inczp(P,i);
	
	memcpy(^@memPos, 0, P,200);
	

end;

begin
	asm(";crash");
	P:=$1200;

	SCREEN_BG_COL:=BLACK;
	clearscreen($20, $4400);
	memcpy(^$0400, 0, ^@memPos,200);
	clearscreen($20, $0400);
	while 1<>2 do
		Raster();



end.
