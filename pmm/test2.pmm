PROGRAM FirstC64;
VAR
   a, b, c, i, j : byte;
   data: array [4096] of byte;

BEGIN

{	i:=#0;
	a:=#0;
	b:=#0;

    	poke($C202, #0,#13);
    	poke(SPRITE_DATA_LOC,#0, #3); 
    	poke(SPRITE_BITMASK,#0, #255);
    	poke(SPRITE_COLOR,#0, #2);
    	poke(SPRITE_COLOR,#0, #3);


	while i<#10 do begin
		while a<>#100 do begin
			peek(RASTERLINE_POS, #0, a);
		end;
		
		poke(SCREEN_BACKGROUND_COLOR, #0, BLACK);
		while a<>#0 do begin
			peek(RASTERLINE_POS, #0, a);
		end;
		
		poke(SCREEN_BACKGROUND_COLOR, #0, RED);
		b:=b+#1;
		c:=#255-b;
    		poke(SPRITE_POS,#0, b);
    		poke(SPRITE_POS,#1, b);
    		poke(SPRITE_POS,#2, c);
    		poke(SPRITE_POS,#3, b);


       end;

}

END.
